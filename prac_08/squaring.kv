
BoxLayout:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.7
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
        Label:
            text: 'Enter a number and press "Square"'
            font_size: 24
            color: (1, 1, 0, 1)
    Label:
        text: ''
        id: output_label
        font_size: 48
        color: (1, 0, 1, 1)